<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="16dp"
    android:focusable="true"
    android:clickable="true"
    android:longClickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="8dp">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/finance_description"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finance_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finance_amount"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/finance_upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/finance_date"
        android:layout_alignParentEnd="true"
        android:text="@string/finance_upocoming"
        android:textColor="#F44336"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/finance_passed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/finance_date"
        android:layout_alignParentEnd="true"
        android:text="@string/finance_passed"
        android:textColor="#4CAF50"
        android:visibility="invisible"/>
    </RelativeLayout>
