<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/exam"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:longClickable="true"
    android:orientation="horizontal"
    android:padding="10dp">
    <TextView
        android:id="@+id/journal_exam_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/journal_exam_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/journal_exam_name"
        android:textColor="@color/secondary_white"/>

    <TextView
        android:id="@+id/journal_exam_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/journal_exam_name"
        android:layout_toEndOf="@+id/journal_exam_chair"
        android:layout_toRightOf="@+id/journal_exam_chair"
        android:textColor="@color/secondary_white"/>

    <TextView
        android:id="@+id/journal_exam_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/secondary_white"/>
</RelativeLayout>